<div class="container new-container">
  <div class="form-wrapper">
    <h2 class="title-text">予定の新規追加</h2>
    <%= render "shared/error", obj: @schedule %>

    <div class="table-wrapper">
      <%= form_with model: @schedule do |f| %>
        <table class="table new-table">
          <tr>
            <th><%= f.label :title, "タイトル" %></th>
            <td><%= f.text_field :title, placeholder: "タイトル" %></td>
          </tr>

          <tr>
            <th><%= f.label :start_date, "開始日" %></th>
            <td><%= f.date_field :start_date, value: Date.today %></td>
          </tr>

          <tr>
            <th><%= f.label :end_date, "終了日" %></th>
            <td><%= f.date_field :end_date, value: Date.today %></td>
          </tr>

          <tr>
            <th><%= f.label :all_day, "終日の場合はチェック" %></th>
            <td><%= f.check_box :all_day, :as => :boolean %></td>
          </tr>

          <tr>
            <th><%= f.label :memo, "スケジュールメモ" %></th>
            <td><%= f.text_area :memo, placeholder: "メモを入力する", class: "textarea" %></td>
          </tr>
        </table>

        <div class="button-area">
          <%= link_to "← 一覧に戻る", :schedules, class: "button return-button" %>
          <%= f.submit "保存", class: "button  submit-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>